<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_primary_light"
    >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/black"
        android:padding="2dp"
        android:textSize="@dimen/text_size_16"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/dialog_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:text="Do you want to logout ?"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/confirm_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:padding="2dp"
        android:textColor="@color/black"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialog_confirmation"
        />

    <TextView
        android:id="@+id/cancel_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="2dp"
        android:layout_toLeftOf="@+id/confirm_logout"
        android:layout_alignTop="@+id/confirm_logout"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        />

</RelativeLayout>