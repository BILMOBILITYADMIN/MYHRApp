<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/my_primary"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a reason to reject : "
        android:textSize="14sp"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView1"
        android:background="@drawable/border_black"
        />

    <TextView
        android:id="@+id/confirm_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:padding="2dp"
        android:textColor="@color/black"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText_reason"
        />

    <TextView
        android:id="@+id/cancel_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="2dp"
        android:layout_toLeftOf="@+id/confirm_reject"
        android:layout_alignTop="@+id/confirm_reject"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        />


</RelativeLayout>